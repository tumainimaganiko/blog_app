<h2 class='log-header'>Forgot your password?</h2>
<div class="custom-form1">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-field1">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'custom-input1' %>
  </div>

  <div class="form-field1">
    <%= f.submit "Send me reset password instructions", class: 'custom-button1' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>